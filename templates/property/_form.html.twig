{{ form_start(form, { attr: { class: 'space-y-8 property-form' } }) }}

<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Informations générales</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">{{ form_row(form.title) }}</div>
        <div class="md:col-span-2">{{ form_row(form.description) }}</div>
        <div>{{ form_row(form.propertyType) }}</div>
        <div>{{ form_row(form.status) }}</div>
        <div class="md:col-span-2">{{ form_row(form.image) }}</div>
    </div>
</div>

<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Adresse</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">{{ form_row(form.address) }}</div>
        <div>{{ form_row(form.city) }}</div>
        <div>{{ form_row(form.country) }}</div>
        <div>{{ form_row(form.postalCode) }}</div>
        <div>{{ form_row(form.latitude) }}</div>
        <div>{{ form_row(form.longitude) }}</div>
    </div>
</div>

<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Capacité</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {{ form_row(form.maxGuests) }}
        {{ form_row(form.bedrooms) }}
        {{ form_row(form.beds) }}
        {{ form_row(form.bathrooms) }}
    </div>
</div>

<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Tarifs</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {{ form_row(form.pricePerNight) }}
        {{ form_row(form.cleaningFee) }}
    </div>
</div>

{% if form.createdAt is defined %}
<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Dates</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {{ form_row(form.createdAt) }}
        {{ form_row(form.updatedAt) }}
    </div>
</div>
{% endif %}

{% if form.host is defined %}
<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Hôte</h3>
    {{ form_row(form.host) }}
</div>
{% endif %}

{% if form.amenities is defined %}
<div class="bg-white rounded-2xl border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Équipements</h3>
    {{ form_row(form.amenities) }}
</div>
{% endif %}

<div class="flex flex-wrap items-center gap-4">
    <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-[#FF385C] text-white font-semibold rounded-xl hover:bg-[#E61E4D] transition-colors shadow-sm">
        {{ button_label|default('Enregistrer') }}
    </button>
    <a href="{{ path('app_property_index') }}" class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium">
        Annuler
    </a>
</div>

{{ form_end(form) }}
