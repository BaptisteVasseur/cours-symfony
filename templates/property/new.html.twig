{% extends 'layout/base.html.twig' %}

{% block title %}Créer une annonce - Airbnb{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .property-form .form-control, .property-form input:not([type="hidden"]):not([type="checkbox"]), .property-form select, .property-form textarea {
            width: 100%;
            padding: 0.5rem 1rem;
            border: 1px solid #d1d5db;
            border-radius: 0.75rem;
            font-size: 1rem;
        }
        .property-form input:focus, .property-form select:focus, .property-form textarea:focus {
            outline: none;
            border-color: #FF385C;
            box-shadow: 0 0 0 2px rgba(255, 56, 92, 0.2);
        }
        .property-form label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }
        .property-form .invalid-feedback { color: #dc2626; font-size: 0.875rem; margin-top: 0.25rem; }
    </style>
{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <nav class="flex items-center gap-2 text-sm text-gray-500 mb-8">
        <a href="{{ path('app_property_index') }}" class="hover:text-[#FF385C] transition-colors">Annonces</a>
        <span>/</span>
        <span class="text-gray-900 font-medium">Nouvelle annonce</span>
    </nav>

    <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Créer une annonce</h1>
        <p class="text-gray-500 mt-1">Renseignez les informations de votre logement pour le mettre en ligne.</p>
    </div>

    {{ include('property/_form.html.twig', { button_label: 'Créer l\'annonce' }) }}
</div>
{% endblock %}
