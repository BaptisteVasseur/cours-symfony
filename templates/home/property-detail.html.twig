{% extends 'base.html.twig' %}

{% block title %}{{ property.title }} - Airbnb Clone{% endblock %}

{% block body %}

{% include 'parts/_header.html.twig' %}

<!-- Main Content -->
<main class="main-content">
    <!-- Property Header -->
    <section class="property-header">
        <div class="container">
            <div class="breadcrumb">
                <a href="{{ path('app_home') }}">Accueil</a>
                <span>></span>
                <a href="{{ path('app_home_search') }}">Recherche</a>
                <span>></span>
                <span>{{ property.city }}</span>
            </div>

            <h1 class="property-title">{{ property.title }}</h1>

            <div class="property-location">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span>{{ property.address }}, {{ property.city }}</span>
            </div>
        </div>
    </section>

    <!-- Property Images -->
    <section class="property-images">
        <div class="container">
            <div class="image-gallery">
                <div class="main-image">
                    <img src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=800&h=600&fit=crop" alt="{{ property.title }}" />
                </div>
                <div class="secondary-images">
                    <img src="https://images.unsplash.com/photo-1571896349842-33c89424de2d?w=400&h=300&fit=crop" alt="{{ property.title }}" />
                    <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=400&h=300&fit=crop" alt="{{ property.title }}" />
                    <img src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=400&h=300&fit=crop" alt="{{ property.title }}" />
                    <img src="https://images.unsplash.com/photo-1560448204-603b3fc33ddc?w=400&h=300&fit=crop" alt="{{ property.title }}" />
                </div>
            </div>
        </div>
    </section>

    <!-- Property Details -->
    <section class="property-details">
        <div class="container">
            <div class="details-grid">
                <!-- Main Content -->
                <div class="main-content">
                    <!-- Host Info -->
                    <div class="host-section">
                        <div class="host-info">
                            <div class="host-avatar">
                                <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop&crop=face" alt="{{ property.host.firstName }}" />
                            </div>
                            <div class="host-details">
                                <h3>Hébergé par {{ property.host.firstName }} {{ property.host.lastName }}</h3>
                                <p>Membre depuis {{ property.host.createdAt|date('Y') }}</p>
                            </div>
                        </div>
                        <div class="host-rating">
                            <div class="rating-stars">
                                {% for i in 1..5 %}
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="{% if i <= property.note %}#ffd700{% else %}#e1e5e9{% endif %}" stroke="none">
                                        <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                                    </svg>
                                {% endfor %}
                            </div>
                            <span class="rating-text">{{ property.note }}/5</span>
                        </div>
                    </div>

                    <!-- Property Features -->
                    <div class="features-section">
                        <div class="feature-grid">
                            <div class="feature-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9,22 9,12 15,12 15,22"></polyline>
                                </svg>
                                <div>
                                    <h4>{{ property.bedrooms }} chambre{{ property.bedrooms > 1 ? 's' : '' }}</h4>
                                    <p>Nombre de chambres</p>
                                </div>
                            </div>

                            <div class="feature-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                                    <line x1="8" y1="21" x2="16" y2="21"></line>
                                    <line x1="12" y1="17" x2="12" y2="21"></line>
                                </svg>
                                <div>
                                    <h4>{{ property.bathrooms }} salle{{ property.bathrooms > 1 ? 's' : '' }} de bain</h4>
                                    <p>Nombre de salles de bain</p>
                                </div>
                            </div>

                            <div class="feature-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                <div>
                                    <h4>{{ property.maxGuests }} voyageur{{ property.maxGuests > 1 ? 's' : '' }}</h4>
                                    <p>Capacité maximale</p>
                                </div>
                            </div>

                            <div class="feature-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12,6 12,12 16,14"></polyline>
                                </svg>
                                <div>
                                    <h4>Disponible</h4>
                                    <p>Propriété active</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="description-section">
                        <h3>À propos de ce logement</h3>
                        <p>{{ property.description }}</p>
                    </div>

                    <!-- Reviews Section -->
                    <div class="reviews-section">
                        <h3>Avis des voyageurs</h3>
                        {% if property.reviews|length > 0 %}
                            <div class="reviews-summary">
                                <div class="overall-rating">
                                    <span class="rating-number">{{ property.note }}</span>
                                    <div class="rating-stars">
                                        {% for i in 1..5 %}
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="{% if i <= property.note %}#ffd700{% else %}#e1e5e9{% endif %}" stroke="none">
                                                <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                                            </svg>
                                        {% endfor %}
                                    </div>
                                    <span class="reviews-count">{{ property.reviews|length }} avis</span>
                                </div>
                            </div>

                            <div class="reviews-list">
                                {% for review in property.reviews %}
                                    <div class="review-item">
                                        <div class="review-header">
                                            <div class="reviewer-info">
                                                <img src="https://images.unsplash.com/photo-{{ 1500000000000 + loop.index * 1000000 }}?w=50&h=50&fit=crop&crop=face" alt="{{ review.guest.firstName }}" />
                                                <div>
                                                    <h4>{{ review.guest.firstName }} {{ review.guest.lastName }}</h4>
                                                    <span>{{ review.createdAt|date('F Y') }}</span>
                                                </div>
                                            </div>
                                            <div class="review-rating">
                                                {% for i in 1..5 %}
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="{% if i <= review.rating %}#ffd700{% else %}#e1e5e9{% endif %}" stroke="none">
                                                        <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                                                    </svg>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <p>{{ review.comment }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="no-reviews">
                                <p>Aucun avis pour le moment. Soyez le premier à laisser un commentaire !</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Booking Sidebar -->
                <div class="booking-sidebar">
                    <div class="booking-card">
                        <div class="price-section">
                            <span class="price">{{ property.pricePerNight|number_format(0, ',', ' ') }}€</span>
                            <span class="price-period">par nuit</span>
                        </div>

                        <form class="booking-form">
                            <div class="date-inputs">
                                <div class="input-group">
                                    <label for="checkin">Arrivée</label>
                                    <input type="date" id="checkin" name="checkin" required>
                                </div>
                                <div class="input-group">
                                    <label for="checkout">Départ</label>
                                    <input type="date" id="checkout" name="checkout" required>
                                </div>
                            </div>

                            <div class="guests-input">
                                <label for="guests">Voyageurs</label>
                                <select id="guests" name="guests" required>
                                    {% for i in 1..property.maxGuests %}
                                        <option value="{{ i }}">{{ i }} voyageur{{ i > 1 ? 's' : '' }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <button type="submit" class="book-button">
                                Réserver
                            </button>

                            <p class="booking-note">Vous ne serez pas encore débité</p>
                        </form>

                        <div class="booking-summary">
                            <div class="summary-line">
                                <span>{{ property.pricePerNight|number_format(0, ',', ' ') }}€ × 3 nuits</span>
                                <span>{{ (property.pricePerNight * 3)|number_format(0, ',', ' ') }}€</span>
                            </div>
                            <div class="summary-line">
                                <span>Frais de service</span>
                                <span>{{ (property.pricePerNight * 3 * 0.1)|number_format(0, ',', ' ') }}€</span>
                            </div>
                            <div class="summary-line total">
                                <span>Total</span>
                                <span>{{ (property.pricePerNight * 3 * 1.1)|number_format(0, ',', ' ') }}€</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{% include 'parts/_footer.html.twig' %}

<style>
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.property-header {
    padding: 40px 0 20px;
    background: #f8f9fa;
}

.breadcrumb {
    margin-bottom: 20px;
    font-size: 0.9rem;
    color: #666;
}

.breadcrumb a {
    color: #ff5a5f;
    text-decoration: none;
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.breadcrumb span {
    margin: 0 10px;
}

.property-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 15px;
}

.property-location {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #666;
    font-size: 1.1rem;
}

.property-images {
    padding: 20px 0;
}

.image-gallery {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 10px;
    height: 400px;
}

.main-image {
    border-radius: 12px;
    overflow: hidden;
}

.main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.secondary-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
}

.secondary-images img {
    width: 100%;
    height: calc(50% - 5px);
    object-fit: cover;
    border-radius: 8px;
}

.property-details {
    padding: 40px 0;
}

.details-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 60px;
}

.host-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 0;
    border-bottom: 1px solid #e1e5e9;
    margin-bottom: 30px;
}

.host-info {
    display: flex;
    align-items: center;
    gap: 15px;
}

.host-avatar img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
}

.host-details h3 {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 5px;
}

.host-details p {
    color: #666;
    font-size: 0.9rem;
}

.host-rating {
    display: flex;
    align-items: center;
    gap: 10px;
}

.rating-stars {
    display: flex;
    gap: 2px;
}

.rating-text {
    font-weight: 600;
    color: #333;
}

.features-section {
    margin-bottom: 40px;
}

.feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 12px;
}

.feature-item svg {
    color: #ff5a5f;
    flex-shrink: 0;
}

.feature-item h4 {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 5px;
}

.feature-item p {
    color: #666;
    font-size: 0.9rem;
}

.description-section {
    margin-bottom: 40px;
}

.description-section h3 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 20px;
}

.description-section p {
    color: #666;
    line-height: 1.6;
    font-size: 1.1rem;
}

.reviews-section h3 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 20px;
}

.reviews-summary {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 12px;
}

.rating-number {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
}

.reviews-count {
    color: #666;
}

.reviews-list {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.review-item {
    padding: 20px;
    border: 1px solid #e1e5e9;
    border-radius: 12px;
}

.review-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.reviewer-info {
    display: flex;
    align-items: center;
    gap: 12px;
}

.reviewer-info img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
}

.reviewer-info h4 {
    font-size: 1rem;
    color: #333;
    margin-bottom: 3px;
}

.reviewer-info span {
    color: #666;
    font-size: 0.9rem;
}

.review-rating {
    display: flex;
    gap: 2px;
}

.review-item p {
    color: #666;
    line-height: 1.5;
}

.no-reviews {
    text-align: center;
    padding: 40px;
    color: #666;
}

.booking-sidebar {
    position: sticky;
    top: 20px;
    height: fit-content;
}

.booking-card {
    border: 1px solid #e1e5e9;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.price-section {
    margin-bottom: 20px;
}

.price {
    font-size: 1.8rem;
    font-weight: 700;
    color: #333;
}

.price-period {
    color: #666;
    font-size: 1rem;
}

.booking-form {
    margin-bottom: 20px;
}

.date-inputs {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    margin-bottom: 15px;
}

.input-group {
    display: flex;
    flex-direction: column;
}

.input-group label {
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
    font-size: 0.9rem;
}

.input-group input,
.guests-input select {
    padding: 12px;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    font-size: 1rem;
}

.guests-input {
    margin-bottom: 20px;
}

.guests-input label {
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
    font-size: 0.9rem;
    display: block;
}

.book-button {
    width: 100%;
    background: #ff5a5f;
    color: white;
    border: none;
    padding: 16px;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-bottom: 10px;
}

.book-button:hover {
    background: #e04a4f;
}

.booking-note {
    text-align: center;
    color: #666;
    font-size: 0.9rem;
}

.booking-summary {
    border-top: 1px solid #e1e5e9;
    padding-top: 20px;
}

.summary-line {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    color: #666;
}

.summary-line.total {
    font-weight: 700;
    color: #333;
    font-size: 1.1rem;
    border-top: 1px solid #e1e5e9;
    padding-top: 10px;
    margin-top: 10px;
}

@media (max-width: 768px) {
    .details-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }

    .image-gallery {
        grid-template-columns: 1fr;
        height: auto;
    }

    .secondary-images {
        grid-template-columns: repeat(2, 1fr);
        margin-top: 10px;
    }

    .feature-grid {
        grid-template-columns: 1fr;
    }

    .host-section {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .property-title {
        font-size: 2rem;
    }
}
</style>

{% endblock %}
