                                {% for booking in property.bookings %}
                                    {% for review in booking.reviews %}
                                        {% if review.isFromGuest %}
                                            {% set propertyReviews = propertyReviews|merge([review]) %}
                                        {% endif %}
                                    {% endfor %}
                                {% endfor %}
                                {% set propertyRatings = propertyReviews|map(r => r.rating) %}
                                {% set propertyAvgRating = propertyReviews|length > 0 ? ((propertyRatings|sum) / propertyReviews|length)|round(1) : 0 %}

                                <a href="{{ path('app_property_detail', {id: property.id}) }}" class="group block">
                                    <div class="relative w-full aspect-[4/3] rounded-2xl overflow-hidden mb-3">
                                        <img src="{{ property.image }}" alt="{{ property.title }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                        {% if propertyBookings|length > 0 %}
                                            <div class="absolute top-3 left-3 px-3 py-1.5 bg-white/95 backdrop-blur-sm text-gray-900 text-xs font-bold rounded-full shadow-lg">
                                                ‚úÖ {{ propertyBookings|length }} s√©jour{{ propertyBookings|length > 1 ? 's' : '' }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="space-y-1">
                                        <div class="flex items-start justify-between gap-2">
                                            <h3 class="font-semibold text-gray-900 group-hover:text-[#FF385C] transition-colors">{{ property.city }}, {{ property.country }}</h3>
                                            {% if propertyAvgRating > 0 %}
                                                <div class="flex items-center gap-1 flex-shrink-0">
                                                    <svg class="w-4 h-4 text-[#FF385C]" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                                    </svg>
                                                    <span class="text-sm font-semibold text-gray-900">{{ propertyAvgRating }}</span>
