                            <h2 class="text-2xl font-bold text-gray-900">Badges obtenus</h2>
                            <span class="px-4 py-2 bg-gradient-to-r from-game-gold/20 to-yellow-500/20 text-game-gold font-bold rounded-full text-sm">
                                {{ hostBadgesCount }} badge{{ hostBadgesCount > 1 ? 's' : '' }}
                            </span>
                        </div>
                        <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-4">
                            {% for userBadge in host.userBadges %}
                                {% if userBadge.badge %}
                                    <div class="group relative">
                                        <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-4 border-2 border-gray-100 hover:border-game-purple hover:shadow-lg transition-all cursor-pointer">
                                            <div class="text-center">
                                                <div class="text-3xl mb-2">
                                                    {% if userBadge.badge.iconUrl %}
                                                        <img src="{{ userBadge.badge.iconUrl }}" alt="{{ userBadge.badge.name }}" class="w-10 h-10 mx-auto">
                                                    {% else %}
                                                        üèÜ
                                                    {% endif %}
                                                </div>
                                                <p class="text-xs font-semibold text-gray-900 line-clamp-2">{{ userBadge.badge.name }}</p>
                                            </div>
