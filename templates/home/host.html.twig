                    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <div class="text-yellow-500 text-3xl mb-3">‚≠ê</div>
                        <div class="text-3xl font-bold text-gray-900 mb-1">{{ averageRating }}/5</div>
                        <div class="text-sm text-gray-600">Note moyenne</div>
                    </div>


                {% if activeProperties|length > 0 %}
                    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <div class="text-blue-500 text-3xl mb-3">üè°</div>
                        <div class="text-3xl font-bold text-gray-900 mb-1">{{ activeProperties|length }}</div>
                        <div class="text-sm text-gray-600">{{ activeProperties|length > 1 ? 'Logements' : 'Logement' }}</div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-8">
                {% if host.bio %}
                    <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">√Ä propos de {{ host.firstName }}</h2>
                        <p class="text-gray-700 leading-relaxed text-lg whitespace-pre-line">{{ host.bio }}</p>
                    </div>
                {% endif %}

                {% if host.userBadges|length > 0 %}
