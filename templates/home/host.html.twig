                        <div class="text-[#FF385C] text-3xl mb-3">üè†</div>
                        <div class="text-3xl font-bold text-gray-900 mb-1">{{ completedBookings|length }}</div>
                        <div class="text-sm text-gray-600">S√©jours r√©ussis</div>
                    </div>

                    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                        <div class="text-green-500 text-3xl mb-3">üí∞</div>
