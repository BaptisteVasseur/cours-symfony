{% extends 'layout/base.html.twig' %}

{% block title %}{{ host.firstName }} {{ host.lastName }} - Profil de l'h√¥te{% endblock %}

{% block body %}
{% set hostReviews = host.reviewsReceived|filter(r => not r.isFromGuest) %}
{% set ratings = hostReviews|map(r => r.rating) %}
{% set averageRating = hostReviews|length > 0 ? ((ratings|sum) / hostReviews|length)|round(1) : 0 %}
{% set hostBadgesCount = host.userBadges|length %}
{% set activeProperties = host.properties %}

{% set allBookings = [] %}
{% for property in host.properties %}
    {% set allBookings = allBookings|merge(property.bookings|default([])) %}
{% endfor %}
{% set completedBookings = allBookings|filter(b => b.status == 'completed') %}
{% set totalRevenue = completedBookings|reduce((carry, b) => carry + b.totalPrice, 0) %}

{% set activeChallenges = host.userChallenges|filter(c => not c.isCompleted and c.challenge.isActive) %}
{% set completedChallenges = host.userChallenges|filter(c => c.isCompleted) %}
{% set activeRewards = host.userRewards|filter(r => r.status == 'active') %}

{% set languageMap = {
    'fr': 'üá´üá∑ Fran√ßais',
    'en': 'üá¨üáß English',
    'es': 'üá™üá∏ Espa√±ol',
    'de': 'üá©üá™ Deutsch',
    'it': 'üáÆüáπ Italiano'
} %}

<div class="bg-gray-50 min-h-screen">
    <div class="relative bg-white">
        <div class="h-64 bg-gradient-to-br from-[#FF385C] via-[#E61E4D] to-game-purple relative overflow-hidden">
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-10 left-20 w-72 h-72 bg-white rounded-full blur-3xl"></div>
                <div class="absolute bottom-10 right-20 w-96 h-96 bg-white rounded-full blur-3xl"></div>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative -mt-32 pb-12">
                <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
                    <div class="flex flex-col md:flex-row gap-8">
                        <div class="relative flex-shrink-0 mx-auto md:mx-0">
                            {% if host.profilePictureUrl %}
                                <img src="{{ host.profilePictureUrl }}" alt="{{ host.firstName }}" class="w-40 h-40 rounded-3xl object-cover shadow-lg ring-4 ring-white">
                            {% else %}
                                <div class="w-40 h-40 rounded-3xl shadow-lg ring-4 ring-white bg-gradient-to-br from-game-purple to-game-pink flex items-center justify-center">
                                    <span class="text-white font-bold text-5xl">{{ host.firstName|first|upper }}{{ host.lastName|first|upper }}</span>
                                </div>
                            {% endif %}
                            {% if hostBadgesCount > 0 %}
                                <div class="absolute -bottom-3 -right-3 w-14 h-14 bg-gradient-to-br from-game-gold to-yellow-500 rounded-2xl flex items-center justify-center shadow-lg ring-4 ring-white">
                                    <span class="text-white font-bold text-xl">{{ hostBadgesCount }}</span>
                                </div>
                            {% endif %}
                        </div>

                        <div class="flex-1 text-center md:text-left">
