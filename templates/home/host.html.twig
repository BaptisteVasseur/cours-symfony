                        {% endif %}
                    </div>
                {% endif %}
            </div>

            <div class="lg:col-span-1">
                <div class="sticky top-24 space-y-6">
                    {% if host.gamificationStats %}
                        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                            <h3 class="text-lg font-bold text-gray-900 mb-6">Gamification</h3>
                            <div class="space-y-3">
                                <div class="bg-gradient-to-br from-game-purple/10 to-game-pink/10 rounded-xl p-4">
