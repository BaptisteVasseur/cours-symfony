{% extends 'layout/base.html.twig' %}

{% block title %}Détail de la propriété - Airbnb{% endblock %}

{% block body %}
    {% set propertyReviews = [] %}
    {% for booking in property.bookings %}
        {% for review in booking.reviews %}
            {% if review.isFromGuest %}
                {% set propertyReviews = propertyReviews|merge([review]) %}
            {% endif %}
        {% endfor %}
    {% endfor %}
    {% set ratings = propertyReviews|map(r => r.rating) %}
    {% set averageRating = propertyReviews|length > 0 ? ((ratings|sum) / propertyReviews|length)|round(1) : 0 %}
    {% set hostBadgesCount = property.host.userBadges|length %}

    <!-- Property Detail -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Images Gallery -->
        <div class="mb-8">
            {% if property.photos|length > 0 %}
                <div class="grid grid-cols-4 gap-2 h-[500px]">
                    {% if property.photos|length >= 1 %}
                        <div class="col-span-2 row-span-2 rounded-2xl overflow-hidden">
                            <img src="{{ property.photos[0].photoUrl }}" alt="{{ property.title }}" class="w-full h-full object-cover">
                        </div>
                    {% endif %}
                    {% if property.photos|length >= 2 %}
                        <div class="col-span-2 rounded-2xl overflow-hidden">
                            <img src="{{ property.photos[1].photoUrl }}" alt="{{ property.title }}" class="w-full h-full object-cover">
                        </div>
                    {% endif %}
                    {% if property.photos|length >= 3 %}
                        <div class="rounded-2xl overflow-hidden">
                            <img src="{{ property.photos[2].photoUrl }}" alt="{{ property.title }}" class="w-full h-full object-cover">
                        </div>
                    {% endif %}
                    {% if property.photos|length >= 4 %}
                        <div class="rounded-2xl overflow-hidden relative">
                            <img src="{{ property.photos[3].photoUrl }}" alt="{{ property.title }}" class="w-full h-full object-cover">
                            {% if property.photos|length > 4 %}
                                <button class="absolute bottom-4 right-4 bg-white px-4 py-2 rounded-lg font-medium text-sm hover:bg-gray-100">
                                    Afficher toutes les photos ({{ property.photos|length }})
                                </button>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% else %}
                <div class="w-full h-[500px] rounded-2xl overflow-hidden bg-gray-200 flex items-center justify-center">
                    {% if property.image %}
                        <img src="{{ property.image }}" alt="{{ property.title }}" class="w-full h-full object-cover">
                    {% else %}
                        <span class="text-gray-400">Aucune photo disponible</span>
                    {% endif %}
                </div>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column -->
            <div class="lg:col-span-2">
                <!-- Title and Location -->
                <div class="mb-6">
                    <h1 class="text-3xl font-semibold text-gray-900 mb-2">{{ property.title }}</h1>
                    <div class="flex items-center space-x-2 text-gray-600">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span>{{ property.address }}, {{ property.city }}, {{ property.country }}</span>
                        {% if property.latitude and property.longitude %}
                            <a href="#" class="text-[#FF385C] hover:underline font-medium">Afficher la carte</a>
                        {% endif %}
                    </div>
                </div>

                <!-- Host Info -->
                <a href="{{ path('app_host_profile', {id: property.host.id}) }}" class="block border-b border-gray-200 pb-6 mb-6 fade-in hover:bg-gray-50 -mx-6 px-6 transition-colors rounded-lg group">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="relative">
                                {% if property.host.profilePictureUrl %}
                                    <img src="{{ property.host.profilePictureUrl }}" alt="{{ property.host.firstName }}" class="w-16 h-16 rounded-full border-2 border-game-purple/30 group-hover:border-game-purple/50 transition-colors">
                                {% else %}
                                    <div class="w-16 h-16 rounded-full border-2 border-game-purple/30 group-hover:border-game-purple/50 bg-gray-200 flex items-center justify-center transition-colors">
                                        <span class="text-game-purple font-bold">{{ property.host.firstName|first|upper }}{{ property.host.lastName|first|upper }}</span>
                                    </div>
                                {% endif %}
                                {% if hostBadgesCount > 0 %}
                                    <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-gradient-to-r from-game-purple to-game-pink rounded-full border-2 border-white flex items-center justify-center badge-animation">
                                        <span class="text-xs font-bold text-white">{{ hostBadgesCount }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            <div>
                                <h3 class="font-semibold text-lg text-gray-900 group-hover:text-game-purple transition-colors">Hébergé par {{ property.host.firstName }} {{ property.host.lastName }}</h3>
                                <div class="flex items-center space-x-2 mt-1">
                                    {% for userBadge in property.host.userBadges|slice(0, 3) %}
                                        {% if userBadge.badge %}
                                            <span class="text-xs px-2 py-0.5 bg-game-cyan/10 text-game-cyan rounded-full border border-game-cyan/20">{{ userBadge.badge.name }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <svg class="w-6 h-6 text-gray-400 group-hover:text-game-purple transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </a>

                <!-- Property Details -->
                <div class="border-b border-gray-200 pb-6 mb-6">
                    <div class="grid grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-center space-x-2 mb-1">
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                </svg>
                                <span class="font-semibold">{{ property.propertyType }}</span>
                            </div>
                            <p class="text-sm text-gray-600">Type de logement</p>
                        </div>
                        <div>
                            <div class="flex items-center space-x-2 mb-1">
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                <span class="font-semibold">{{ property.maxGuests }} voyageurs</span>
                            </div>
                            <p class="text-sm text-gray-600">Capacité</p>
                        </div>
                        <div>
                            <div class="flex items-center space-x-2 mb-1">
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                </svg>
                                <span class="font-semibold">{{ property.bedrooms }} chambres</span>
                            </div>
                            <p class="text-sm text-gray-600">{{ property.beds }} lits, {{ property.bathrooms }} salle(s) de bain</p>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="border-b border-gray-200 pb-6 mb-6">
                    <p class="text-gray-700 leading-relaxed">{{ property.description }}</p>
                </div>

                <!-- Amenities -->
                {% if property.amenities|length > 0 %}
                    <div class="border-b border-gray-200 pb-6 mb-6 fade-in">
                        <h2 class="text-2xl font-semibold mb-4">Ce que propose ce logement</h2>
                        <div class="grid grid-cols-2 gap-4">
                            {% for amenity in property.amenities %}
                                <div class="flex items-center space-x-3 amenity-item p-3 rounded-lg bg-gray-50 border border-gray-100 hover-lift">
                                    <div class="w-6 h-6 flex items-center justify-center">
                                        <svg class="w-5 h-5 text-game-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </div>
                                    <span class="text-gray-700 font-medium">{{ amenity.name }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Reviews -->
                {% if propertyReviews|length > 0 %}
                    <div class="mb-6">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h2 class="text-2xl font-semibold mb-2">
                                    <svg class="w-5 h-5 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                    {{ averageRating }} ({{ propertyReviews|length }} avis)
                                </h2>
                            </div>
                        </div>
                        <div class="space-y-8">
                            {% for review in propertyReviews|slice(0, 10) %}
                                {% include 'parts/_review.html.twig' %}
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <div class="mb-6">
                        <h2 class="text-2xl font-semibold mb-4">Avis</h2>
                        <p class="text-gray-600">Aucun avis pour le moment.</p>
                    </div>
                {% endif %}
            </div>

            <!-- Right Column - Booking Card -->
            <div class="lg:col-span-1">
                <div class="sticky top-24 booking-card rounded-2xl p-6 fade-in">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <span class="text-3xl font-bold text-gray-900">{{ property.pricePerNight }} €</span>
                            <span class="text-gray-600"> / nuit</span>
                        </div>
                    </div>

                    <!-- Points Reward (si gamification activée) -->
                    {% if app.user and app.user.gamificationStats %}
                        <div class="mb-4 p-4 rounded-xl bg-gradient-to-r from-game-purple/10 to-game-pink/10 border-2 border-game-purple/30 points-glow">
                            <div class="flex items-center space-x-2">
                                <span class="text-3xl">⚡</span>
                                <div>
                                    {% set estimatedPoints = (property.pricePerNight|number_format(0, '', '') / 10)|round %}
                                    <p class="text-sm font-bold text-game-purple">Gagnez ~{{ estimatedPoints }} points</p>
                                    <p class="text-xs text-gray-600">en réservant ce logement</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="border border-gray-300 rounded-lg p-4 mb-4 bg-white">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="border-r border-gray-300 pr-4">
                                <label class="text-xs font-semibold text-gray-700 uppercase">Arrivée</label>
                                <input type="date" id="checkin" class="w-full border-none outline-none text-sm mt-1">
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-700 uppercase">Départ</label>
                                <input type="date" id="checkout" class="w-full border-none outline-none text-sm mt-1">
                            </div>
                        </div>
                        <div class="border-t border-gray-300 mt-4 pt-4">
                            <label class="text-xs font-semibold text-gray-700 uppercase">Voyageurs</label>
                            <select id="guests" class="w-full border-none outline-none text-sm mt-1 bg-transparent">
                                {% for i in 1..property.maxGuests %}
                                    <option value="{{ i }}">{{ i }} {% if i == 1 %}voyageur{% else %}voyageurs{% endif %}</option>
                                {% endfor %}
                            </select>
                        </div>
                        {% if app.user %}
                            <a href="#" onclick="alert('Fonctionnalité de réservation à implémenter'); return false;" class="block w-full bg-gradient-to-r from-[#FF385C] to-[#E61E4D] text-white rounded-lg py-4 font-bold hover:from-[#E61E4D] hover:to-[#FF385C] transition-all transform hover:scale-105 mt-4 text-lg shadow-lg hover:shadow-xl text-center no-underline">
                                Réserver
                            </a>
                        {% else %}
                            {# <a href="{{ path('app_login') }}" class="block w-full bg-gradient-to-r from-[#FF385C] to-[#E61E4D] text-white rounded-lg py-4 font-bold hover:from-[#E61E4D] hover:to-[#FF385C] transition-all transform hover:scale-105 mt-4 text-lg shadow-lg hover:shadow-xl text-center no-underline">
                                Connectez-vous pour réserver
                            </a> #}
                        {% endif %}
                    </div>
                    <p class="text-center text-sm text-gray-600 mb-4">Vous ne serez pas débité pour le moment</p>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600">{{ property.pricePerNight }} € x 5 nuits</span>
                            <span class="font-semibold">{{ (property.pricePerNight * 5)|number_format(2, ',', ' ') }} €</span>
                        </div>
                        {% if property.cleaningFee %}
                            <div class="flex justify-between">
                                <span class="text-gray-600">Frais de nettoyage</span>
                                <span class="font-semibold">{{ property.cleaningFee }} €</span>
                            </div>
                        {% endif %}
                        <div class="flex justify-between">
                            <span class="text-gray-600">Frais de service Airbnb</span>
                            <span class="font-semibold">{{ ((property.pricePerNight * 5) * 0.12)|round(2) }} €</span>
                        </div>
                        <div class="border-t border-gray-300 pt-3 flex justify-between font-bold text-lg">
                            <span>Total</span>
                            <span class="bg-gradient-to-r from-game-purple to-game-pink bg-clip-text text-transparent">
                                {{ (property.pricePerNight * 5 + (property.cleaningFee ?? 0) + (property.pricePerNight * 5 * 0.12))|round(2) }} €
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
