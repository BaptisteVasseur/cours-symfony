<div>
    <div class="flex items-center space-x-4 mb-3">
        {% if review.reviewer.profilePictureUrl %}
            <img src="{{ review.reviewer.profilePictureUrl }}" alt="{{ review.reviewer.firstName }}" class="w-12 h-12 rounded-full">
        {% else %}
            <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center">
                <span class="text-gray-600 font-semibold">{{ review.reviewer.firstName|first|upper }}{{ review.reviewer.lastName|first|upper }}</span>
            </div>
        {% endif %}
        <div>
            <h4 class="font-semibold">{{ review.reviewer.firstName }} {{ review.reviewer.lastName }}</h4>
            <p class="text-sm text-gray-600">{{ review.createdAt|date('F Y') }}</p>
        </div>
    </div>
    <div class="flex items-center mb-2">
        {% for i in 1..5 %}
            <svg class="w-4 h-4 {% if i <= review.rating %}text-[#FF385C]{% else %}text-gray-300{% endif %}" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
        {% endfor %}
    </div>
    {% if review.comment %}
        <p class="text-gray-700">{{ review.comment }}</p>
    {% endif %}
</div>
